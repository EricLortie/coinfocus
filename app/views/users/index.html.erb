<% provide(:title, "Users") %>
<%= javascript_pack_tag 'application' %>

<% currency = "USD" %>

<div class="row">

  <div id="userTable" class="col-sm-12">

    <%= will_paginate @users, class: "at_pagination pagination-centered" %>

    <% @users.each do |user| %>

      <div class="row userRow">
        <div class="col-sm-5 col-xs-12"><%= user.email %></div>
        <div class="col-sm-2 col-xs-4"><%= user.approved_string %></div>
        <div class="col-sm-2 col-xs-3"><%= user.admin_string %></div>
        <div class="col-sm-2 col-xs-3"></div>
        <div class="col-sm-1 col-xs-2"><%= link_to "Edit", edit_user_path(user) %></div>
      </div>

    <% end %>
    <%= will_paginate @users, class: "at_pagination pagination-centered" %>
  </div>
</div>
