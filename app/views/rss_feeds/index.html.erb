<% provide(:title, "Snapshots") %>
<%= javascript_pack_tag 'application' %>

<% currency = "USD" %>

<%= will_paginate @rss_feeds %>
<div id="dataTable">

  <div class="row dataHeader">
    <div class="coinListName col-xs-8">URL</div>
    <div class="coinListValue col-xs-2">Type</div>
    <div class="coinListValue col-xs-2">Articles</div>
  </div>
  <% count = 0 %>
  <% @rss_feeds.each do |rss_feed| %>


    <div class="row <%=(count%2==0) ? "alt-row" : "" %>">
      <div class="coinListValue col-xs-8">
        <%= rss_feed.url %>
      </div>
      <div class="coinListValue col-xs-2">
        <%= rss_feed.rss_type %>
      </div>
      <div class="coinListValue col-xs-2">
        <%= rss_feed.entry_count %>
      </div>

    </div>

    <% count += 1 %>

  <% end %>
</div>
<%= will_paginate @snapshots %>
